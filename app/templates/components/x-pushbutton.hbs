{{#if state}}
  <button class="btn btn-default active {{extraClass}} " {{action "toggle"}}>

    {{#tooltip-message message=tooltip_deactivate position=position}}
      {{yield}}
    {{/tooltip-message}}

  </button>
{{else}}
  <button class="btn btn-default {{extraClass}}" {{action "toggle"}}>

    {{#tooltip-message message=tooltip_activate position=position}}
      {{yield}}
    {{/tooltip-message}}

  </button>
{{/if}}
