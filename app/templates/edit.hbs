<div class="edit-contenedor">

  <div class="edit-fila">
    <div>
      {{x-title title=model.title}}
    </div>

    <div class="button-container">
      {{x-back to="project"}}

      <button disabled={{itsSaved}} type="button" {{action "save" model}} class="btn btn-primary">Guardar</button>
      {{#link-to "edit.previewModal" model class="btn btn-success"}}Previsualizar{{/link-to}}

      <button {{action "reload" model}} class="btn btn-info"> Ejecutar </button>

      <div class="float-right">
        {{#x-pushbutton state=leftPanelVisible}}{{fa-icon "fa-caret-square-o-left"}}{{/x-pushbutton}}
        {{#x-pushbutton state=rightPanelVisible}}{{fa-icon "fa-caret-square-o-right"}}{{/x-pushbutton}}
      </div>

    </div>
  </div>


  <div class="edit-fila-triple">

    {{#if leftPanelVisible}}
      <div class="edit-panel-izquierdo">
        uno
      </div>
    {{/if}}

    {{#if rightPanelVisible}}
      <div class="edit-panel-derecho {{if largePreview 'edit-panel-derecho-large' 'edit-panel-derecho-normal'}}">
        <div class="float-right">
          {{#x-pushbutton state=largePreview extraClass="btn-xs"}}{{fa-icon "fa-caret-square-o-left"}}{{/x-pushbutton}}
        </div>
      </div>
    {{/if}}

    <div class="edit-panel-principal">
      panel
    </div>

  </div>

  <div class="edit-principal">

    {{#if leftPanelVisible}}
      <div class="edit-panel-izquierdo">
        IZQ (200px)
      </div>
    {{/if}}



    {{#if rightPanelVisible}}
      <div class="edit-panel-derecho {{if largePreview 'edit-panel-derecho-large' 'edit-panel-derecho-normal'}}">
        <p class="loading-p">
            {{x-spinner}}
        </p>
        {{x-result project=model actionReceiver=xResultHandler}}
        {{js-console}}
      </div>
    {{/if}}

    <div class="edit-panel-principal">
      {{x-editor value=model.code}}
    </div>

  </div>

  <div class="edit-fila">
    pie
  </div>
</div>

{{outlet}}
