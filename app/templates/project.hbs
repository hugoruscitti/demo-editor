<div class="padding">

<p>Proyectos</p>

<div class="bar">
  {{x-back to="index"}}
</div>

<table class="border table-striped">
    <thead>
        <tr>
            <th>Nombre del proyecto</th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>
      {{#each model as |project|}}
        <tr>
            <td>
              {{#link-to "edit" project}}{{project.title}}{{/link-to}}
            </td>
            <td>
              {{#link-to "project.runModal" project tagName="button" class="btn btn-warning btn-mini"}}Ejecutar{{/link-to}}
              {{#link-to "edit" project tagName="button" class="btn btn-primary btn-mini"}}Editar{{/link-to}}
              <button {{action "remove" project}} class="btn btn-mini btn-negative">Eliminar</button>
          </td>
        </tr>
      {{else}}
        <tr>
          <td colspan=2>No hay proyectos para mostrar a√∫n.</td>
        </tr>
      {{/each}}
    </tbody>
</table>

{{outlet}}

</div>
