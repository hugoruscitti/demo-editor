{{#x-header}}
    <div class="btn-group">
      {{#link-to "index" tagName="button" class="btn btn-default"}} {{p-icon icon="home"}} {{/link-to}}
      {{#link-to "project" tagName="button" class="btn btn-default"}} {{p-icon icon="bag"}} {{/link-to}}
    </div>
{{/x-header}}

<div class="window-content">
  <div class="pane">


    <div class="padding">

    <p>Proyectos</p>

    <div class="bar">
      <button {{action "newProject"}} class="btn btn-primary">Crear un proyecto nuevo</button>
    </div>

    <table class="border table-striped">
        <thead>
            <tr>
                <th>Nombre del proyecto</th>
                <th>Acciones</th>
            </tr>
        </thead>

        <tbody>
          {{#each model as |project|}}
            <tr>

                {{#link-to "edit" project}}<td>{{project.title}}</td>{{/link-to}}
                <td>
                  {{#link-to "project.runModal" project tagName="button" class="btn btn-warning btn-mini"}}Ejecutar{{/link-to}}
                  {{#link-to "edit" project tagName="button" class="btn btn-primary btn-mini"}}Editar{{/link-to}}
                  <button {{action "remove" project}} class="btn btn-mini btn-negative">Eliminar</button>
              </td>
            </tr>
          {{else}}
            <tr>
              <td colspan=2>No hay proyectos para mostrar a√∫n.</td>
            </tr>
          {{/each}}
        </tbody>
    </table>

    {{outlet}}

    </div>

</div>
</div>
